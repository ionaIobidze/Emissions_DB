USE carbon_emissions;

-- this creats the emissions table
CREATE TABLE emissions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    country VARCHAR(50),
    year INT,
    emissions FLOAT
);

-- this creates the energy_usage table
CREATE TABLE energy_usage (
    id INT AUTO_INCREMENT PRIMARY KEY,
    country VARCHAR(50),
    year INT,
    energy_used FLOAT,
    renewable_energy_used FLOAT
);
